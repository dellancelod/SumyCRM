@model Facility
@{
    string strTitle = "Редагувати установу";
    ViewBag.Title = strTitle;
}

<div class="container mt-5">
    <h2 class="text-center mb-4">@strTitle</h2>

    <form asp-area="Admin" asp-controller="Facilities" asp-action="Edit" method="post" enctype="multipart/form-data" class="needs-validation">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="DateAdded" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Phones" class="form-label"></label>
            <input asp-for="Phones" class="form-control" />
            <span asp-validation-for="Phones" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <input type="submit" value="Зберегти" class="btn btn-primary" />
            <a asp-area="Admin" asp-controller="Facilities" asp-action="Index" class="btn btn-outline-secondary">
                Відмінити редагування
            </a>
        </div>
    </form>
</div>
