@using SumyCRM.Areas.Admin.Models
@model PaginationViewModel<Facility>
@{
    int itemIndex = (Model.CurrentPage - 1) * Model.PageSize + 1;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">
        Підприємства, установи та організації, що забезпечують життєдіяльність в місті
    </h2>

    <div class="d-flex align-items-center gap-2">
        <div class="input-group input-group-sm" style="width: 250px;">
            <span class="input-group-text bg-white">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input type="text"
                   id="facilitySearch"
                   class="form-control"
                   placeholder="Пошук установи..." />
        </div>
        @if (User.IsInRole("admin"))
        {
            <a asp-area="Admin" asp-controller="Facilities" asp-action="Edit" asp-route-id=""
               class="btn btn-outline-secondary btn-sm">
                додати установу
            </a>
        }
    </div>
</div>

<div>
    @if (Model.PageItems.Any())
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Назва організації</th>
                    <th scope="col">Опис</th>
                    <th scope="col">Адреса</th>
                    <th scope="col">Телефон</th>
                    @if (User.IsInRole("admin"))
                    {
                        <th scope="col">Дії</th>
                    }
                </tr>
            </thead>
            <tbody id="facilitiesTableBody">
                @foreach (var item in Model.PageItems)
                {
                    <tr class="@(item.Hidden ? "table-hidden" : "")">
                        <th scope="row">@itemIndex</th>
                        <td>
                            @($"{item.Name}")
                        </td>
                        <td>
                            @($"{item.Description}")
                        </td>
                        <td>
                            @($"{item.Address}")
                        </td>
                        <td>
                            @($"{item.Phones}")
                        </td>
                        <td>
                            @if (User.IsInRole("admin"))
                            {
                                <a asp-area="Admin" asp-controller="Facilities" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>
                            
                                <form style="display: inline-block;" id="form-@item.Id" asp-area="Admin" asp-controller="Facilities" asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('@item.Id')">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                    itemIndex += 1;
                }
            </tbody>
        </table>
    }
    <!-- Pagination Controls -->
    <nav>
        <ul class="pagination">
            @if (Model.TotalPages > 1)

            {
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" aria-label="Попередня">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                }
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" aria-label="Наступна">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
            }
        </ul>
    </nav>
</div>
<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationLabel">Підтвердження видалення</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Ви впевнені, що хочете видалити цю категорію?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Видалити</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        let formToSubmit = null;

        function confirmDelete(formId) {
            formToSubmit = document.getElementById(`form-${formId}`);
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
            if (formToSubmit) {
                formToSubmit.submit();
            }
        });

        (function () {
            const input = document.getElementById('facilitySearch');
            const form = document.getElementById('facilitySearchForm');
            if (!input || !form) return;

            let timer = null;

            input.addEventListener('input', function () {
                clearTimeout(timer);
                timer = setTimeout(function () {
                    form.submit();
                }, 400); // 400ms після паузи в наборі
            });
        })();

                // ===== LIVE SEARCH =====
        (function () {
            const searchInput = document.getElementById('facilitySearch');
            const tableBody = document.getElementById('facilitiesTableBody');
            const isAdmin = @User.IsInRole("admin").ToString().ToLower(); // true/false

            let typingTimer = null;

            if (!searchInput || !tableBody) return;

            searchInput.addEventListener('input', function () {
                const term = this.value;

                // невелика затримка, щоб не спамити сервер
                clearTimeout(typingTimer);
                typingTimer = setTimeout(function () {
                    if (term.trim().length === 0) {
                        // якщо поле очищене — просто перезавантажимо сторінку,
                        // щоб повернути стандартну пагінацію
                        window.location.href = '@Url.Action("Index", "Facilities", new { area = "Admin" })';
                        return;
                    }

                    fetch('@Url.Action("Search", "Facilities", new { area = "Admin" })' + '?term=' + encodeURIComponent(term))
                        .then(r => r.json())
                        .then(data => {
                            tableBody.innerHTML = '';

                            if (!data || data.length === 0) {
                                tableBody.innerHTML =
                                    '<tr><td colspan="' + (isAdmin ? 6 : 5) + '" class="text-center text-muted">Нічого не знайдено</td></tr>';
                                return;
                            }

                            data.forEach(function (f) {
                                const tr = document.createElement('tr');
                                if (f.hidden) {
                                    tr.classList.add('table-hidden');
                                }

                                let actionsHtml = '';
                                if (isAdmin) {
                                    actionsHtml = `
                                        <td>
                                            <a href="@Url.Action("Edit", "Facilities", new { area = "Admin" })/${f.id}">
                                                <i class="fa-regular fa-pen-to-square"></i>
                                            </a>
                                            <form style="display:inline-block;" id="form-${f.id}"
                                                  action="@Url.Action("Delete", "Facilities", new { area = "Admin" })"
                                                  method="post" class="d-inline">
                                                <input type="hidden" name="id" value="${f.id}" />
                                                <button type="button" class="btn btn-sm btn-danger"
                                                        onclick="confirmDelete('${f.id}')">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>`;
                                }

                                tr.innerHTML = `
                                    <th scope="row">${f.index}</th>
                                    <td>${f.name ?? ''}</td>
                                    <td>${f.description ?? ''}</td>
                                    <td>${f.address ?? ''}</td>
                                    <td>${f.phones ?? ''}</td>
                                    ${actionsHtml}
                                `;
                                tableBody.appendChild(tr);
                            });
                        })
                        .catch(err => {
                            console.error('Facility search error:', err);
                        });

                }, 300); // 300 мс debounce
            });
        })();
    </script>
}