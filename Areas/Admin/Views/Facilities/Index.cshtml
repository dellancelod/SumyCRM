@using SumyCRM.Areas.Admin.Models
@model PaginationViewModel<Facility>
@{
    int itemIndex = (Model.CurrentPage - 1) * Model.PageSize + 1;
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">
        Підприємства, установи та організації, що забезпечують життєдіяльність в місті
    </h2>

    <div class="d-flex align-items-center gap-2">
        <div class="input-group input-group-sm" style="width: 250px;">
            <span class="input-group-text bg-white">
                <i class="fa-solid fa-magnifying-glass"></i>
            </span>
            <input type="text"
                   id="facilitySearch"
                   class="form-control"
                   placeholder="Пошук установи..." />
        </div>
        @if (User.IsInRole("admin"))
        {
            <a asp-area="Admin" asp-controller="Facilities" asp-action="Edit" asp-route-id=""
               class="btn btn-outline-secondary btn-sm">
                додати установу
            </a>
        }
    </div>
</div>

<div>
    @if (Model.PageItems.Any())
    {
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Назва організації</th>
                    <th scope="col">Опис</th>
                    <th scope="col">Адреса</th>
                    <th scope="col">Телефон</th>
                    @if (User.IsInRole("admin"))
                    {
                        <th scope="col">Дії</th>
                    }
                </tr>
            </thead>
            <tbody id="facilitiesTableBody">
                @foreach (var item in Model.PageItems)
                {
                    <tr class="@(item.Hidden ? "table-hidden" : "")">
                        <th scope="row">@itemIndex</th>
                        <td>
                            @($"{item.Name}")
                        </td>
                        <td>
                            @($"{item.Description}")
                        </td>
                        <td>
                            @($"{item.Address}")
                        </td>
                        <td>
                            @($"{item.Phones}")
                        </td>
                        <td>
                            @if (User.IsInRole("admin"))
                            {
                                <a asp-area="Admin" asp-controller="Facilities" asp-action="Edit" asp-route-id="@item.Id">
                                    <i class="fa-regular fa-pen-to-square"></i>
                                </a>
                            
                                <form style="display: inline-block;" id="form-@item.Id" asp-area="Admin" asp-controller="Facilities" asp-action="Delete" method="post" class="d-inline">
                                    <input type="hidden" name="id" value="@item.Id" />
                                    <button type="button" class="btn btn-sm btn-danger" onclick="confirmDelete('@item.Id')">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                </form>
                            }
                        </td>
                    </tr>
                    itemIndex += 1;
                }
            </tbody>
        </table>
    }
    <!-- Pagination Controls -->
    <nav id="paginationNav">
        <ul class="pagination">
            @if (Model.TotalPages > 1)

            {
                @if (Model.CurrentPage > 1)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage - 1)" aria-label="Попередня">
                            <span aria-hidden="true">&laquo;</span>
                            <span class="sr-only">Previous</span>
                        </a>
                    </li>
                }
                @for (var i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                    </li>
                }
                @if (Model.CurrentPage < Model.TotalPages)
                {
                    <li class="page-item">
                        <a class="page-link" asp-action="Index" asp-route-page="@(Model.CurrentPage + 1)" aria-label="Наступна">
                            <span aria-hidden="true">&raquo;</span>
                            <span class="sr-only">Next</span>
                        </a>
                    </li>
                }
            }
        </ul>
    </nav>
</div>
<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmationModal" tabindex="-1" aria-labelledby="deleteConfirmationLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteConfirmationLabel">Підтвердження видалення</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Ви впевнені, що хочете видалити цю категорію?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Скасувати</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Видалити</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        let formToSubmit = null;

        function confirmDelete(formId) {
            formToSubmit = document.getElementById(`form-${formId}`);
            const deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmationModal'));
            deleteModal.show();
        }

        document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
            if (formToSubmit) {
                formToSubmit.submit();
            }
        });

        (function () {
            const input = document.getElementById('facilitySearch');
            const form = document.getElementById('facilitySearchForm');
            if (!input || !form) return;

            let timer = null;

            input.addEventListener('input', function () {
                clearTimeout(timer);
                timer = setTimeout(function () {
                    form.submit();
                }, 400); // 400ms після паузи в наборі
            });
        })();

        // ===== LIVE SEARCH FOR REQUESTS =====
        (function () {
            const searchInput = document.getElementById('requestSearch');
            const tableBody = document.getElementById('requestsTableBody');
            const paginationNav = document.getElementById('paginationNav');

            if (!searchInput || !tableBody) return;

            const isAdmin = @User.IsInRole("admin").ToString().ToLower();
            const areCompleted = @((bool)ViewBag.AreCompleted ? "true" : "false");

            let typingTimer = null;

            searchInput.addEventListener('input', function () {
                const term = this.value;

                clearTimeout(typingTimer);
                typingTimer = setTimeout(function () {

                    if (term.trim().length === 0) {
                        // show pagination again
                        paginationNav.style.display = 'block';
                        window.location.reload();
                        return;
                    }

                    // hide pagination while searching
                    paginationNav.style.display = 'none';

                    const url = '@Url.Action("Search", "Requests", new { area = "Admin" })'
                        + '?term=' + encodeURIComponent(term)
                        + '&completed=' + areCompleted;

                    fetch(url)
                        .then(r => r.json())
                        .then(data => {
                            tableBody.innerHTML = '';

                            if (!data || data.length === 0) {
                                const colCount = isAdmin ? 11 : 10;
                                tableBody.innerHTML =
                                    `<tr><td colspan="${colCount}" class="text-center text-muted">Нічого не знайдено</td></tr>`;
                                return;
                            }

                            data.forEach(item => {
                                const tr = document.createElement('tr');

                                let audioHtml = '';
                                if (item.nameAudio) {
                                    audioHtml += `
                                        <label><span><audio controls src="${item.nameAudio}"></audio></span></label>`;
                                }
                                if (item.audio) {
                                    audioHtml += `
                                        <label><span><audio controls src="${item.audio}"></audio></span></label>`;
                                }

                                let actionsHtml = '';
                                if (item.isCompleted) {
                                    if (isAdmin) {
                                        actionsHtml = `
                                            <form style="display:inline-block;" id="form-${item.id}"
                                                  action="@Url.Action("Delete", "Requests", new { area = "Admin" })"
                                                  method="post" class="d-inline">
                                                <input type="hidden" name="id" value="${item.id}" />
                                                <button type="button" class="btn btn-sm btn-danger"
                                                        onclick="confirmDelete('${item.id}')">
                                                    <i class="fa fa-trash"></i>
                                                </button>
                                            </form>`;
                                    }
                                } else {
                                    actionsHtml = `
                                        <form action="@Url.Action("CompleteRequest", "Requests", new { area = "Admin" })"
                                              method="post">
                                            <input type="hidden" name="id" value="${item.id}" />
                                            <button type="submit" class="btn btn-success">
                                                <i class="fa-solid fa-square-check fa-lg"></i>
                                            </button>
                                        </form>`;
                                }

                                tr.innerHTML = `
                                    <th scope="row">${item.index}</th>
                                    <td>${item.requestNumber ?? ''}</td>
                                    <td>${item.name ?? ''}</td>
                                    <td>${item.caller ?? ''}</td>
                                    <td>${item.category ?? ''}</td>
                                    <td>${item.subcategory ?? ''}</td>
                                    <td>${item.text ?? ''}</td>
                                    <td>${audioHtml}</td>
                                    <td>${item.date ?? ''}</td>
                                    <td>
                                        <a href="@Url.Action("Show", "Requests", new { area = "Admin" })/${item.id}">
                                            <i class="fa-solid fa-eye fa-lg"></i>
                                        </a>
                                    </td>
                                    <td>${actionsHtml}</td>
                                `;

                                tableBody.appendChild(tr);
                            });
                        })
                        .catch(err => console.error('Requests search error:', err));

                }, 300);
            });
        })();
    </script>
}