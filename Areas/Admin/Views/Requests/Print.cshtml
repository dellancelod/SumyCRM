@model SumyCRM.Models.Request
@{
    Layout = null; // чистий аркуш

    var dt = Model.DateAdded.ToLocalTime();
    int year = dt.Year;               
    string dateStr = dt.ToString("dd.MM.yyyy");
    string timeStr = dt.ToString("HH:mm");

    // ПІБ: у тебе поле Name, тому ставимо його сюди
    string pib = string.IsNullOrWhiteSpace(Model.Name) ? "__________________________________________" : Model.Name;

    string address = string.IsNullOrWhiteSpace(Model.Address) ? "_____________________________________________________" : Model.Address;
    string phone = string.IsNullOrWhiteSpace(Model.Caller) ? "_____________________________________________________" : Model.Caller;

    // Виконавець (можеш підставляти User.Identity.Name або окреме поле)
    string executor = string.IsNullOrWhiteSpace(Model.Facility.Name) ? "___________________________________________________________" : Model.Facility.Name;

    // Кому передано
    string forwardedTo = "__________________________________________________________";

    // Хід виконання / відгук — поки пусті поля
}
<!doctype html>
<html lang="uk">
<head>
    <meta charset="utf-8" />
    <title>Лист звернення №@Model.RequestNumber</title>
    <style>
        /* IMPORTANT for Razor: @@media / @@page */
        @@page {
            margin: 15mm;
        }

        body {
            font-family: "Times New Roman", serif;
            font-size: 14pt;
            color: #000;
        }

        .no-print {
            margin-bottom: 14px;
        }

        @@media print {
            .no-print {
                display: none !important;
            }
        }

        .center {
            text-align: center;
        }

        .right {
            text-align: right;
        }

        .row {
            display: flex;
            justify-content: space-between;
            gap: 12px;
        }

        .mono {
            white-space: pre-wrap;
        }

        .mt-12 {
            margin-top: 12px;
        }

        .mt-18 {
            margin-top: 18px;
        }

        .mt-24 {
            margin-top: 24px;
        }

        .mt-32 {
            margin-top: 32px;
        }

        .small-line {
            border-bottom: 1px solid #000;
            display: inline-block;
            min-width: 50px;
        }
        .line {
            border-bottom: 1px solid #000;
            display: inline-block;
            min-width: 260px;
        }

        .wide-line {
            border-bottom: 1px solid #000;
            display: inline-block;
            width: 100%;
            height: 20px;
        }

        .field-label {
            font-weight: 700;
        }

        .small {
            font-size: 12pt;
        }

        .block-lines .wide-line {
            margin-top: 6px;
        }

        .sig {
            width: 48%;
        }

            .sig .wide-line {
                height: 18px;
            }
    </style>
</head>
<body>
    <div class="no-print">
        <button onclick="window.print()">🖨️ Друкувати</button>
        <button onclick="window.close()">✖ Закрити</button>
    </div>

    <div class="center">
        <div><b>СУМСЬКА МІСЬКА РАДА</b></div>
        <div><b>УПРАВЛІННЯ ТРАНСПОРТУ, ТРАНСПОРТНОЇ ІНФРАСТРУКТУРИ ТА ЗВ'ЯЗКУ</b></div>
        <div><b>Відділ «Інформаційний центр»</b></div>
    </div>

    <div class="mt-18 row">
        <div>
            <span class="field-label">№</span>
            <span class="small-line">@Model.RequestNumber</span>
        </div>
        <div>
            <span class="field-label">дата</span>
            <span class="small-line">@dateStr</span>
            <span class="small">р.</span>
        </div>
    </div>

    <div class="mt-12">
        <span class="field-label">Час</span>
        <span class="small-line">@timeStr</span>
        <span class="small">год.</span>
    </div>

    <div class="mt-18">
        <span class="field-label">Прізвище, ім'я, по батькові</span><br />
        <span class="wide-line">@pib</span>
    </div>

    <div class="mt-12">
        <span class="field-label">Адреса замовника</span><br />
        <span class="wide-line">@address</span>
    </div>

    <div class="mt-12">
        <span class="field-label">Телефон <span class="line">@phone</span></span><br />
        
    </div>

    <div class="mt-12">
        <span class="field-label">Виконавець</span><br />
        <span class="wide-line">@executor</span>
    </div>

    <div class="mt-18">
        <div class="field-label">Зміст пропозицій, заявки, скарги</div>
        <div class="block-lines">
            @{
                // Текст звернення — в перший рядок, якщо є
                var text = string.IsNullOrWhiteSpace(Model.Text) ? "" : Model.Text.Trim();
            }
            <div class="wide-line">@text</div>
            <div class="wide-line"></div>
            <div class="wide-line"></div>
            <div class="wide-line"></div>
            <div class="wide-line"></div>
        </div>
    </div>

    <div class="mt-18">
        <span class="field-label">Кому передано для виконання</span><br />
        <span class="wide-line"></span>
        <div class="wide-line"></div>
        <div class="wide-line"></div>
        <div class="wide-line"></div>
    </div>

    <div class="mt-18">
        <div class="field-label">Інформація про хід виконання і завершення роботи</div>
        <div class="block-lines">
            <div class="wide-line"></div>
            <div class="wide-line"></div>
            <div class="wide-line"></div>
            <div class="wide-line"></div>
            <div class="wide-line"></div>
        </div>
    </div>

    <div class="mt-18">
        <span class="field-label">Замовнику роз'яснено, повідомлено</span>
        «__» __ @year р.
    </div>

    <div class="mt-12">
        <span class="field-label">Його відгук</span>
        <div class="block-lines">
            <div class="wide-line"></div>
            <div class="wide-line"></div>
            <div class="wide-line"></div>
            <div class="wide-line"></div>
        </div>
    </div>

    <div class="mt-18">
        <span class="field-label">Дата виконання</span>
        «___» _______ @year р.
    </div>

    <div class="mt-24">
        <div class="field-label">Головний спеціаліст відділу «Інформаційний центр»</div>

        <div class="mt-18 row">
            <div class="sig center">
                <div class="wide-line"></div>
                <div class="small">(підпис)</div>
            </div>
            <div class="sig center">
                <div class="wide-line"></div>
                <div class="small">(П.І.Б.)</div>
            </div>
        </div>
    </div>
</body>
</html>
