@using SumyCRM.Areas.Admin.Models
@model DashboardViewModel

<h2>Головна сторінка</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <h4>Звернення</h4>
        <canvas id="requestsDonut"></canvas>
        <div class="mt-2">
            <span class="badge bg-primary">Активні: @Model.ActiveCount</span>
            <span class="badge bg-success">Виконані: @Model.CompletedCount</span>
        </div>
    </div>
    <div class="col-md-4">
        <h4>Категорії</h4>
        <canvas id="categoriesDonut"></canvas>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // ----- Donut 1: Active vs Completed -----
            const ctx1 = document.getElementById('requestsDonut').getContext('2d');

            const activeCount = @Model.ActiveCount;
            const completedCount = @Model.CompletedCount;

            new Chart(ctx1, {
                type: 'doughnut',
                data: {
                    labels: ['Активні', 'Виконані'],
                    datasets: [{
                        data: [activeCount, completedCount],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.7)',   // Активні
                            'rgba(75, 192, 192, 0.7)'    // Виконані
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    cutout: '60%'
                }
            });

            // ----- Donut 2: Categories -----
            const ctx2 = document.getElementById('categoriesDonut').getContext('2d');

            const categoryLabels = @Html.Raw(
            System.Text.Json.JsonSerializer.Serialize(
                Model.CategoryStats.Select(c => c.Name)
            )
        );

            const categoryData = @Html.Raw(
            System.Text.Json.JsonSerializer.Serialize(
                Model.CategoryStats.Select(c => c.Count)
            )
        );

            new Chart(ctx2, {
                type: 'doughnut',
                data: {
                    labels: categoryLabels,
                    datasets: [{
                        data: categoryData,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.7)',
                            'rgba(54, 162, 235, 0.7)',
                            'rgba(255, 206, 86, 0.7)',
                            'rgba(75, 192, 192, 0.7)',
                            'rgba(153, 102, 255, 0.7)',
                            'rgba(255, 159, 64, 0.7)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(75, 192, 192, 1)',
                            'rgba(153, 102, 255, 1)',
                            'rgba(255, 159, 64, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    cutout: '60%'
                }
            });
        });
    </script>
}
