@using SumyCRM.Areas.Admin.Models
@model DashboardViewModel

<h2>Головна сторінка</h2>

<div class="row mb-4">
    <div class="col-md-4">
        <h4>Звернення</h4>
        <canvas id="requestsDonut"></canvas>

        <div class="mt-2">
            <span class="badge bg-primary">Активні: @Model.ActiveCount</span>
            <span class="badge bg-success">Виконані: @Model.CompletedCount</span>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const ctx = document.getElementById('requestsDonut').getContext('2d');

            const activeCount = @Model.ActiveCount;
            const completedCount = @Model.CompletedCount;

            new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Активні', 'Виконані'],
                    datasets: [{
                        data: [activeCount, completedCount],
                        backgroundColor: [
                            'rgba(54, 162, 235, 0.7)',   // Активні
                            'rgba(75, 192, 192, 0.7)'    // Виконані
                        ],
                        borderColor: [
                            'rgba(54, 162, 235, 1)',
                            'rgba(75, 192, 192, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    plugins: {
                        legend: {
                            position: 'bottom'
                        }
                    },
                    cutout: '60%' // делает именно "donut", а не обычный pie
                }
            });
        });
    </script>
}