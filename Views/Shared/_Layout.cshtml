<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">

    <style>
        body { background-color: #f5f6fa; }
        .sidebar {
            width: 240px;
            height: 100vh;
            position: fixed;
            background: #1f1f2e;
            color: #fff;
            padding-top: 20px;
        }
        .sidebar a {
            padding: 12px 20px;
            display: block;
            color: #bbb;
            text-decoration: none;
        }
        .sidebar a:hover {
            background: #34344a;
            color: #fff;
        }
        .content {
            margin-left: 260px;
            padding: 25px;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <h4 class="text-center mb-4">City CRM</h4>
        <a href="/Home">Форма подачи</a>
    </div>

    <div class="content">
        @RenderBody()
    </div>

</body>
</html>
